<div class="row">
    <div class="col-lg-12">
        <h1>Материал</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="progress">
            <div class="progress-bar" ng-style="progressWidth" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>
<div class="well">
    <form class="material-form">
    <div class="row">
        <div class="col-lg-9">
            <h4>Загаловок</h4>
            <input class="form-control" type="text" ng-model="material.title" />
        </div>
        <div class="col-lg-3">
            <h4>Опубликованно</h4>
            <input class="form-control" type="date" name="published" ng-model="material.published">
        </div>
    </div>
<!-- <button ng-click="disabled = !disabled" unselectable>Disable text-angular Toggle</button> -->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9" >
            <h4>Текст</h4>
            <div text-angular="text-angular" name="htmlcontent" ng-model="material.text" ta-disabled='disabled'></div>
        </div>
        <div class="col-md-3">

            <h4>Рубрика</h4>
            <select class="form-control"
                ng-model="material.rubric">
                <option value=""
                    disabled
                    selected >Выбрать рубрику</option>
                <option ng-repeat="rubric in materialRubrics" value="{{rubric.value}}">{{rubric.name}}</option>
            </select>

            <h4>Тэги</h4>
            <select ng-disabled="material.rubric !== 'persons'" size="10" id="myselection" class="form-control" multiple ng-multiple="true" ng-model="selectedTags" ng-options="t.name for t in materialTags track by t.id"></select>
            
            <input ng-disabled="false"
            type="submit"
            class="form-control material-form__button"
            value="Сохранить"
            ng-click="saveMaterial()" />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
            <button class="form-control btn btn-danger material-form__button"
                ng-click="deleteMaterial()">Удалить</button>
        </div>
        
        <div class="col-lg-6">
        </div>
        
        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3"><input ng-disabled="false"
            type="submit"
            class="form-control material-form__button"
            value="Сохранить"
            ng-click="saveMaterial()" /></div>
    </div>
