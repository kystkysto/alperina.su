<div class="row">
    <div class="col-lg-12">
        <h1>Материал</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="progress">
            <div class="progress-bar" ng-style="progressWidth" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>
<div class="well">
    <form class="main-form">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9" >
            <div text-angular="text-angular" name="htmlcontent" ng-model="main.content" ta-disabled='disabled'></div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
        </div>
        
        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3"><input ng-disabled="false"
            type="submit"
            class="form-control material-form__button"
            value="Сохранить"
            ng-click="saveMain()" /></div>
    </div>
    </form>
</div>