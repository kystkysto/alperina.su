<div class="row">
    <div class="col-lg-12">
        <h1>Список цитат</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="progress">
            <div class="progress-bar" ng-style="progressWidth" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 quote-uploader">
        <div class="quote well">
            <div>
                <textarea rows="4" ng-model="quote.content" class="video__input quote__input form-control" placeholder="Цитата"></textarea>
            </div>
            
            <div class="quote-actions">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Активна:
                                <input type="checkbox" ng-model="quote.active">
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6"><button class="form-control quote-actoin__button btn btn-warning"
                        ng-click="clearQuote()">Сбросить</button></div>
                    <div class="col-xs-6"><button class="form-control quote-actoin__button btn btn-default"
                        ng-disabled="!quoteChanged"
                        ng-click="saveQuote()">Сохранить</button></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4"
        ng-repeat="quote in list"
        ng-controller="QuoteController"
        ng-show="list.length">
        <div class="quote well">
            <div>
                <textarea rows="4" ng-model="quote.content" class="video__input quote__input form-control" placeholder="Цитата"></textarea>
            </div>
            <div class="quote-actions">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Активна:
                                <input type="checkbox" ng-model="quote.active">
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6"><button class="form-control quote-actoin__button btn btn-danger"
                        ng-click="deleteQuote($index)">Удалить</button></div>
                    <div class="col-xs-6"><button class="form-control quote-actoin__button btn btn-default"
                        ng-disabled="!quoteChanged"
                        ng-click="saveQuote()">Сохранить</button></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" ng-if="pages.length > 1">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ul class="pagination">
            <li ng-repeat="page in pages"><a ng-click="changePage(page)">{{page}}</a></li>
        </ul>
    </div>
</div>